//Matrix multiplication:-
#include<iostream>
using namespace std;

void input_matrix(int r, int c, int m[50][50]) {
    for(int i = 0; i < r; i++) {
        for(int j = 0; j < c; j++) {
            cin >> m[i][j];
        }
    }
}

void print_matrix(int r, int c, int m[50][50]) {
    for(int i = 0; i < r; i++) {
        for(int j = 0; j < c; j++) {
            cout << m[i][j] << " ";
        }
        cout << endl;
    }
}

void matrix_mul(int r1, int c1, int m1[50][50], int r2, int c2, int m2[50][50]) {
    if (c1 != r2) {
        cout << "Matrix multiplication not possible!" << endl;
        return;
    }

    int result[50][50] = {0};

    for(int i = 0; i < r1; i++) {
        for(int j = 0; j < c2; j++) {
            for(int k = 0; k < c1; k++) {
                result[i][j] += m1[i][k] * m2[k][j];
            }
        }
    }

    print_matrix(r1, c2, result);
}

int main() {
    int rows1, cols1, rows2, cols2;
    int mat1[50][50], mat2[50][50];

    cout << "Enter number of rows for matrix 1: ";
    cin >> rows1;
    cout << "Enter number of columns for matrix 1: ";
    cin >> cols1;
    cout << "Enter matrix 1 contents: ";
    input_matrix(rows1, cols1, mat1);

    cout << "Enter number of rows for matrix 2: ";
    cin >> rows2;
    cout << "Enter number of columns for matrix 2: ";
    cin >> cols2;
    cout << "Enter matrix 2 contents: ";
    input_matrix(rows2, cols2, mat2);

    cout << "Matrix 1: " << endl;
    print_matrix(rows1, cols1, mat1);

    cout << "Matrix 2: " << endl;
    print_matrix(rows2, cols2, mat2);

    cout << "Multiplication of matrices: " << endl;
    matrix_mul(rows1, cols1, mat1, rows2, cols2, mat2);
}
