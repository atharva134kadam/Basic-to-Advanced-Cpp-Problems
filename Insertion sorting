//Insertion sorting:-
#include<iostream>
using namespace std;
void insertion_sorting(int arr[] , int s)
{
    for(int i=1 ; i<s ; i++)
    {
        int key = arr[i];
        int j = i-1;

        while(j>=0 && arr[j]>key)
        {
            arr[j+1] = arr[j];
            j--;
        }

        arr[j+1] = key;
    }

    cout<<"Sorted array: ";
        for(int k=0 ; k<s ; k++)
        {
            cout<<arr[k]<<" ";
        }
}
int main()
{
    int arr[100];
    int size;

    cout<<"Enter the size of array: ";
    cin>>size;

    if(size<=0 || size>100)
    {
        cout<<"Invalid size!!";
        return 1;
    }

    cout<<"Enter the array contents: ";
    for(int i=0 ; i<size ; i++)
    {
        cin>>arr[i];
    }

    insertion_sorting(arr , size);
}
