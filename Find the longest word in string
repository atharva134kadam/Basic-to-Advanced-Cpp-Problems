//Find the longest word in string:-
#include<iostream>
using namespace std;
int main()
{
    string str;

    cout<<"Enter a string: ";
    getline(cin , str);

    int len=str.length();

    string current="";
    string longest="";
    int max=0;

    for(int i=0 ; i<=len ; i++)
    {
        if(i<len && !isspace(str[i]))
        {
            current += str[i];
        }
        else
        {
            if(max < current.length())
            {
                max = current.length();
                longest = current;
            }
            current="";
        }
    }

    cout<<"The longest word is '"<<longest<<"' ,with length "<<max; 
}
